{
  "name": "check-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "markdown-schema2ts": {
      "executor": "nx:run-commands",
      "options": {
        "command": "json2ts",
        "input": "{projectRoot}/src/executors/markdown/schema.json",
        "output": "{projectRoot}/src/executors/markdown/schema.d.ts"
      },
      "inputs": [
        "{projectRoot}/src/executors/markdown/schema.json"
      ],
      "outputs": [
        "{options.output}"
      ],
      "cache": true
    },
    "translations-schema2ts": {
      "executor": "nx:run-commands",
      "options": {
        "command": "json2ts",
        "input": "{projectRoot}/src/executors/translations/schema.json",
        "output": "{projectRoot}/src/executors/translations/schema.d.ts"
      },
      "inputs": [
        "{projectRoot}/src/executors/translations/schema.json"
      ],
      "outputs": [
        "{options.output}"
      ],
      "cache": true
    },
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        "*-schema2ts"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/{projectRoot}",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.md",
          {
            "input": "./{projectRoot}/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./{projectRoot}/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./{projectRoot}",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./{projectRoot}",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    }
  }
}
