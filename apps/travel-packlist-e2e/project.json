{
  "name": "travel-packlist-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "{projectRoot}/src",
  "tags": [
    "scope:testing"
  ],
  "implicitDependencies": [
    "travel-packlist",
    "webapp-plugin"
  ],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "install": {
      "commands": [
        "pnpm playwright install-deps chromium",
        "pnpm playwright install chromium"
      ]
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm playwright test -j 1 -c {projectRoot}/playwright.config.ts"
      },
      "inputs": [
        "default",
        "^production"
      ],
      "cache": true
    },
    "update-snapshots": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm playwright test -j 1 -c {projectRoot}/playwright.config.ts --update-snapshots",
          "git apply dist/.playwright/{projectRoot}/test-output/rebaselines.patch"
        ],
        "parallel": false
      }
    }
  }
}
