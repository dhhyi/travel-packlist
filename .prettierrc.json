{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-sh"
  ],
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "*.sh",
        ".git*",
        ".*ignore"
      ],
      "options": {
        "parser": "sh",
        "indent": 4
      }
    },
    {
      "files": [
        "*.js",
        "*.mjs"
      ],
      "options": {
        "trailingComma": "es5"
      }
    },
    {
      "files": [
        "*.svg"
      ],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": [
        "*.json"
      ],
      "options": {
        "parser": "json",
        "printWidth": 5
      }
    }
  ]
}
