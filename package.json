{
  "name": "travel-packlist-root",
  "version": "1.3.0",
  "license": "MIT",
  "scripts": {
    "changelog": "conventional-changelog -i CHANGELOG.md -n util/conventionalcommits.mjs",
    "version": "npm run changelog -- -s && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "release-notes": "conventional-changelog -r 2 -n util/conventionalcommits.mjs -o",
    "create-prettierignore": "node util/create-prettierignore.mjs",
    "prepare": "husky",
    "dev": "nx serve travel-packlist",
    "start": "nx serve travel-packlist-web"
  },
  "nx": {
    "includedScripts": [
      "dev",
      "start"
    ],
    "implicitDependencies": [
      "check-plugin",
      "libs/*",
      "apps/*"
    ],
    "targets": {
      "design": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "nx storybook design-system",
            "nx run design-system:compile-styles:watch"
          ],
          "parallel": true
        }
      },
      "lint": {
        "executor": "@nx/eslint:lint",
        "options": {
          "lintFilePatterns": [
            "*.*",
            "util/*.*"
          ]
        }
      },
      "markdownlint": {
        "executor": "@travel-packlist/check-plugin:markdown",
        "options": {
          "pattern": "*.md"
        }
      },
      "create-prettierignore": {
        "executor": "nx:run-script",
        "options": {
          "script": "create-prettierignore"
        },
        "inputs": [
          "{workspaceRoot}/util/create-prettierignore.mjs",
          "{workspaceRoot}/**/.gitignore"
        ],
        "outputs": [
          "{workspaceRoot}/.prettierignore"
        ],
        "cache": true
      },
      "format": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "create-prettierignore"
        ],
        "options": {
          "command": "nx format:write --all"
        },
        "configurations": {
          "ci": {
            "command": "nx format:check --all"
          },
          "pre-commit": {
            "command": "nx format:write --uncommitted"
          }
        }
      },
      "dead-code": {
        "executor": "@travel-packlist/check-plugin:dead-code-summary",
        "dependsOn": [
          "^dead-code"
        ],
        "inputs": [
          "{workspaceRoot}/dist/**/dead-code/imports.json",
          "{workspaceRoot}/dist/**/dead-code/exports.json"
        ],
        "cache": false
      }
    }
  },
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "nx",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "lmdb",
      "msgpackr-extract"
    ]
  },
  "dependencies": {
    "@angular/animations": "~20.1.8",
    "@angular/build": "~20.1.6",
    "@angular/common": "~20.1.8",
    "@angular/compiler": "~20.1.8",
    "@angular/compiler-cli": "~20.1.8",
    "@angular/core": "~20.1.8",
    "@angular/forms": "~20.1.8",
    "@angular/localize": "~20.1.8",
    "@angular/platform-browser": "~20.1.8",
    "@angular/platform-browser-dynamic": "~20.1.8",
    "@angular/router": "~20.1.8",
    "@angular/service-worker": "~20.1.8",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.0.2",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/share": "^7.0.2",
    "@nx/angular": "21.4.1",
    "@nx/devkit": "21.4.1",
    "@tailwindcss/postcss": "^4.1.12",
    "browserslist": "^4.25.4",
    "husky": "^9.1.7",
    "json-schema-to-typescript": "^15.0.4",
    "nx": "21.4.1",
    "peggy": "^5.0.6",
    "rxjs": "~7.8.2",
    "showdown": "^2.1.0",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3"
  },
  "devDependencies": {
    "@cspell/cspell-types": "^9.2.1",
    "@cspell/dict-de-de": "^4.1.2",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.34.0",
    "@nx/esbuild": "21.4.1",
    "@nx/eslint": "21.4.1",
    "@nx/eslint-plugin": "21.4.1",
    "@nx/jest": "21.4.1",
    "@nx/js": "21.4.1",
    "@nx/playwright": "21.4.1",
    "@nx/plugin": "21.4.1",
    "@nx/storybook": "21.4.1",
    "@nx/web": "21.4.1",
    "@nx/workspace": "21.4.1",
    "@playwright/test": "1.55.0",
    "@prettier/plugin-xml": "^3.4.2",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-themes": "9.1.3",
    "@storybook/angular": "9.1.3",
    "@tailwindcss/cli": "^4.1.12",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/utils": "^8.41.0",
    "angular-eslint": "~20.2.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cspell": "^9.2.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "jest": "30.1.1",
    "jest-environment-jsdom": "30.1.1",
    "jest-preset-angular": "15.0.0",
    "jest-text-transformer": "^1.0.4",
    "jest-util": "30.0.5",
    "markdownlint-cli": "^0.45.0",
    "minimatch": "^10.0.3",
    "nx-stylelint": "^18.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "~0.16.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "9.1.3",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "ts-jest": "29.4.1",
    "ts-morph": "^26.0.0",
    "ts-node": "10.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
